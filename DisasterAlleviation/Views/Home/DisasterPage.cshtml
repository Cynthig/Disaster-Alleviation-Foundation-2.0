
@{
    ViewData["Title"] = "DisasterPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="width: 600px; background-color: orange; backdrop-filter: blur(10px); box-shadow: 0 0 40px rgba(8,7,16,0.16); border-radius: 0px; padding: 50px 35px;">
    <h2 align = "center"> Capture New Disasters</h2>
    <form asp-controller="Home" asp-action="CaptureDisaster" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Start Date</label>
                <input type="date" class=" text" name="date" placeholder="Date" required="" autofocus />
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">End Date</label>
                <input type="text" class="form-control" name="dateOfDonation" id="inputDate" placeholder="DD/MM/YY" required>
            </div>
        </div>
        <div class="form-group text-left">
            <label for="inputAddress">Location</label>
            <input type="text" class="form-control" name="AddLocation" id="inputCategory" required>
        </div>
        <div class="form-group text-left">
            <label for="inputDescription">Description of the disaster</label>
            <input type="text" class="form-control" name="AddDisasterD" id="inputCategory" style="height:150px" required>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck" required>
                    Stay anonymous?
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary" style="background-color:mediumpurple;">Submit</button>
    </form>
</div>
<div class="text-center" style="margin-top:4%">
    <form>
        <button type="submit" class="btn btn-primary" style="background-color: orange;" asp-controller="Home" asp-action="DisplayUserInfo"> View Data</button>
    </form>
</div>
